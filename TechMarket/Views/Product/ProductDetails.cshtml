@model ProductDTO

@{
    ViewData["Title"] = "Product";
}

<h1>@Model.Name</h1>

<div>
    <img src="@("~/product_images/" + Model.ImagePath)" asp-append-version="true" width="255" height="225"/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
