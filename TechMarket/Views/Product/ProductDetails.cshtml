@model ProductDTO

@{
    ViewData["Title"] = "Product";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <img src="@("~/product_images/" + Model.ImagePath)" asp-append-version="true" width="265" height="225" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
            <button onclick="addProductToCart(@Model.Id)" type="submit" class="btn btn-primary">Add To Cart</button>
        </div>
    </div>
</div>